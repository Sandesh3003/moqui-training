<?xml version="1.0" encoding="UTF-8" ?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/service-definition-3.xsd">

    <service verb="store" noun="ProductDetails" type="inline">
        <in-parameters>
            <parameter name="productName"/>
            <parameter name="description"/>
            <parameter name="price"/>
            <parameter name="priceUomId"/>
        </in-parameters>
        <out-parameters>
            <parameter name="productId" entity-name="mantle.product.ProductPrice"/>
        </out-parameters>
        <actions>
            <if condition="price">
                <if condition="!priceUomId">
                    <return error="true" message="priceUomId is needed for product details"/>
                </if>
            </if>
            <service-call name="create#mantle.product.Product" in-map="context" out-map="context"/>
            <service-call name="create#mantle.product.ProductPrice" in-map="context" out-map="context"/>
        </actions>
    </service>
    <service verb="get" noun="ProductDetails">
        <in-parameters>
            <parameter name="productId"/>
        </in-parameters>
        <out-parameters>
            <parameter name="productList"/>
            <parameter name="productPriceList"/>
        </out-parameters>
        <actions>
            <entity-find entity-name="mantle.product.Product" list="productList">
                <econdition field-name="productId" value="${productId}"/>
                <select-field field-name="productName"/>
                <select-field field-name="description"/>
            </entity-find>
            <entity-find entity-name="mantle.product.ProductPrice" list="productPriceList">
                <econdition field-name="productId" value="${productId}"/>
                <select-field field-name="price"/>
                <select-field field-name="priceUomId"/>
            </entity-find>
            <if condition="!productList">
                <then>
                    <return error="true" message="Product does not exit"/>
                </then>
            </if>
        </actions>
    </service>
</services>