<?xml version="1.0" encoding="UTF-8" ?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/service-definition-3.xsd">
    <service verb="create" noun="MoquiTraining" type="entity-auto" displayName="entity-auto service for creating records">
        <in-parameters>
            <auto-parameters include="all" entity-name="moqui.training.MoquiTraining"/>
            <parameter name="trainingName" required="true"><text-length max="255" min="3"/> </parameter>
            <parameter name="trainingDate" required="true"><time-range format="MM-yyyy"/> </parameter>
            <parameter name="trainingPrice" required="true" default-value="0">
                <number-decimal/>
            </parameter>
            <parameter name="trainingDuration" required="true" default-value="0">
                <number-integer/>
            </parameter>
        </in-parameters>
        <out-parameters>
            <parameter name="trainingId"/>
        </out-parameters>
    </service>

    <service verb="create" type="inline" displayName="service with default type to create records for the entity" noun="Training">
        <in-parameters>
            <auto-parameters entity-name="moqui.training.MoquiTraining"  include="nonpk"/>
            <parameter name="trainingId" required="true"/>
            <parameter name="trainingName" required="true"><text-length max="255" min="3"/> </parameter>
            <parameter name="trainingDate" required="true" format="dd-MM-yyyy"/>
            <parameter name="trainingPrice" required="true" default-value="0">
                <number-decimal/>
            </parameter>
            <parameter name="trainingDuration" required="true" default-value="0">
                <number-integer/>
            </parameter>
        </in-parameters>
        <out-parameters>
            <parameter name="trainingId"/>
        </out-parameters>
        <actions>
            <log message="=========${trainingDate}=========="/>
            <service-call name="create#moqui.training.MoquiTraining" in-map="context" out-map="context"/>
        </actions>
    </service>
    <service verb="create" noun="GroovyTraining" type="script" location="component://moqui-training/service/moqui/training/Training.groovy">
        <in-parameters>
            <auto-parameters entity-name="moqui.training.MoquiTraining" include="nonpk"/>
            <parameter name="trainingId" required="true"/>
            <parameter name="trainingId" required="true"/>
            <parameter name="trainingName" required="true"><text-length max="255" min="3"/> </parameter>
            <parameter name="trainingDate" required="true" format="yyyy-MM-dd"/>
            <parameter name="trainingPrice" required="true" default-value="0">
                <number-decimal/>
            </parameter>
            <parameter name="trainingDuration" required="true" default-value="0">
                <number-integer/>
            </parameter>
        </in-parameters>
        <out-parameters>
            <parameter name="trainingId"/>
        </out-parameters>
    </service>
