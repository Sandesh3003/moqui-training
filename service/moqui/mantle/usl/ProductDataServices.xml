<?xml version="1.0" encoding="UTF-8" ?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/service-definition-3.xsd">
    <service verb="create" noun="Product" type="entity-auto">
        <in-parameters>
            <auto-parameters include="nonpk" entity-name="mantle.product.Product"/>
            <parameter name="productName"/>
            <parameter name="productDescription"/>
        </in-parameters>
        <out-parameters>
            <parameter name="productId"/>
        </out-parameters>
    </service>
    <service verb="create" noun="ProductPrice" type="entity-auto">
        <in-parameters>
            <auto-parameters include="nonpk" entity-name="mantle.product.ProductPrice"/>
            <parameter name="price"/>
            <parameter name="priceUomId" default-value="USD"/>
        </in-parameters>
        <out-parameters>
            <auto-parameters include="pk"/>
            <parameter name="productId"/>
        </out-parameters>
    </service>
    <service verb="store" noun="ProductDetails" type="inline">
        <in-parameters>
            <parameter name="productName"/>
            <parameter name="productDescription"/>
            <parameter name="price"/>
            <parameter name="priceUomId"/>
        </in-parameters>
        <out-parameters>
            <parameter name="productId"/>
        </out-parameters>
        <actions>
            <service-call name="moqui.mantle.usl.ProductDataServices.create#Product" in-map="context" out-map="context"/>
            <service-call name="moqui.mantle.usl.ProductDataServices.create#ProductPrice" in-map="context" out-map="context"/>
        </actions>
    </service>
</services>